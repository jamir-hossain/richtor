{
   "name": "richtor",
   "private": false,
   "version": "1.0.0",
   "type": "module",
   "description": "A beautiful and feature-rich WYSIWYG editor built with Tiptap and shadcn/ui",
   "author": "Jamir Hossain <jamir.hossain@example.com>",
   "license": "MIT",
   "keywords": [
      "react",
      "editor",
      "wysiwyg",
      "tiptap",
      "rich-text",
      "shadcn",
      "typescript",
      "richtor"
   ],
   "repository": {
      "type": "git",
      "url": "https://github.com/jamir-hossain/richtor"
   },
   "bugs": {
      "url": "https://github.com/jamir-hossain/richtor/issues"
   },
   "homepage": "https://github.com/jamir-hossain/richtor#readme",
   "main": "./dist/shadcn-rich-editor.umd.js",
   "module": "./dist/shadcn-rich-editor.es.js",
   "types": "./dist/index.d.ts",
   "exports": {
      ".": {
         "import": "./dist/shadcn-rich-editor.es.js",
         "require": "./dist/shadcn-rich-editor.umd.js",
         "types": "./dist/index.d.ts"
      },
      "./styles": "./dist/style.css"
   },
   "files": [
      "dist",
      "README.md",
      "LICENSE"
   ],
   "scripts": {
      "dev": "vite",
      "build": "tsc && vite build",
      "build:lib": "tsc --project tsconfig.lib.json && vite build --mode lib",
      "lint": "eslint .",
      "preview": "vite preview",
      "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
      "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
      "prepublishOnly": "npm run build:lib"
   },
   "peerDependencies": {
      "react": "^18.0.0 || ^19.0.0",
      "react-dom": "^18.0.0 || ^19.0.0"
   },
   "dependencies": {
      "@codemirror/autocomplete": "^6.20.0",
      "@codemirror/closebrackets": "^0.19.2",
      "@codemirror/lang-css": "^6.3.1",
      "@codemirror/lang-html": "^6.4.11",
      "@codemirror/language": "^6.10.6",
      "@codemirror/matchbrackets": "^0.19.4",
      "@codemirror/state": "^6.4.1",
      "@codemirror/view": "^6.36.2",
      "@lezer/highlight": "^1.2.1",
      "@radix-ui/react-dialog": "^1.1.15",
      "@radix-ui/react-dropdown-menu": "^2.1.16",
      "@radix-ui/react-popover": "^1.1.15",
      "@radix-ui/react-tooltip": "^1.2.8",
      "@tailwindcss/vite": "^4.1.17",
      "@tiptap/core": "^3.11.0",
      "@tiptap/extension-bubble-menu": "^3.11.1",
      "@tiptap/extension-bullet-list": "^3.11.0",
      "@tiptap/extension-character-count": "^3.11.0",
      "@tiptap/extension-code-block-lowlight": "^3.11.0",
      "@tiptap/extension-color": "^3.11.0",
      "@tiptap/extension-highlight": "^3.11.0",
      "@tiptap/extension-image": "^3.11.0",
      "@tiptap/extension-link": "^3.11.0",
      "@tiptap/extension-list-keymap": "^3.11.0",
      "@tiptap/extension-ordered-list": "^3.11.0",
      "@tiptap/extension-placeholder": "^3.11.0",
      "@tiptap/extension-subscript": "^3.11.0",
      "@tiptap/extension-superscript": "^3.11.0",
      "@tiptap/extension-table": "^3.11.0",
      "@tiptap/extension-table-cell": "^3.11.0",
      "@tiptap/extension-table-header": "^3.11.0",
      "@tiptap/extension-table-row": "^3.11.0",
      "@tiptap/extension-text-align": "^3.11.0",
      "@tiptap/extension-text-style": "^3.11.0",
      "@tiptap/extension-underline": "^3.11.0",
      "@tiptap/pm": "^3.11.0",
      "@tiptap/react": "^3.11.0",
      "@tiptap/starter-kit": "^3.11.0",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "codemirror": "^6.0.2",
      "hast": "^0.0.2",
      "hast-util-to-jsx-runtime": "^2.3.2",
      "highlight.js": "^11.11.1",
      "lowlight": "^3.3.0",
      "lucide-react": "^0.555.0",
      "react-colorful": "^5.6.1",
      "react-icons": "^5.5.0",
      "rehype-parse": "^9.0.1",
      "rehype-react": "^8.0.0",
      "shiki": "^3.17.0",
      "tailwind-merge": "^3.4.0",
      "tailwindcss": "^4.1.17",
      "unified": "^11.0.5",
      "unist-util-visit": "^5.0.0"
   },
   "devDependencies": {
      "@eslint/js": "^9.39.1",
      "@types/node": "^24.10.1",
      "@types/react": "^19.2.5",
      "@types/react-dom": "^19.2.3",
      "@vitejs/plugin-react": "^5.1.1",
      "eslint": "^9.39.1",
      "eslint-config-prettier": "^10.1.8",
      "eslint-plugin-react": "^7.37.5",
      "eslint-plugin-react-hooks": "^7.0.1",
      "eslint-plugin-react-refresh": "^0.4.24",
      "globals": "^16.5.0",
      "prettier": "^3.7.1",
      "prettier-plugin-organize-imports": "^4.3.0",
      "prettier-plugin-tailwindcss": "^0.7.1",
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "tw-animate-css": "^1.4.0",
      "typescript": "~5.9.3",
      "typescript-eslint": "^8.46.4",
      "vite": "^7.2.4"
   }
}
